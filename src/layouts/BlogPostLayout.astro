---
import BlogLayout from "./BlogLayout.astro";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  pubDate: Date;
  author: string;
  readTime: string;
  image?: ImageMetadata;
  video?: string;
}

const { title, pubDate, author, readTime, image, video } = Astro.props;
---

<BlogLayout title={`${title} | Wellness Medical Center`}>
  <div class="max-w-screen-xl mx-auto px-4 xl:px-0 pt-32">
    <article>
      <header class="max-w-3xl mx-auto mb-8">
        <h1
          class="text-4xl text-[var(--color-primary)] font-medium mb-4 text-center"
        >
          {title}
        </h1>
        <div class="flex items-center justify-center gap-2 text-gray-600 mb-8">
          <span>{author}</span>
          <span>â€¢</span>
          <time datetime={pubDate.toISOString()}>
            {
              pubDate.toLocaleDateString("en-US", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })
            }
          </time>
        </div>
        {
          video ? (
            <div class="aspect-[16/9] rounded-[24px] overflow-hidden mb-8">
              <video
                src={video}
                controls
                class="w-full h-full object-cover"
                preload="metadata"
              />
            </div>
          ) : (
            image && (
              <div class="aspect-[16/9] rounded-[24px] overflow-hidden mb-8">
                <Image
                  src={image}
                  alt={title}
                  class="w-full h-full object-cover"
                  width={1200}
                  height={675}
                  quality={80}
                />
              </div>
            )
          )
        }
      </header>

      <div class="max-w-3xl mx-auto markdown-content">
        <slot />
      </div>

      <!-- Back to Blog Link -->
      <div class="max-w-3xl mx-auto mt-12 mb-20">
        <a
          href="/blog"
          class="inline-block text-[var(--color-primary)] hover:text-[var(--color-primary-dark)] font-medium"
        >
          <span class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to All Health Education Articles
          </span>
        </a>
      </div>
    </article>
  </div>
</BlogLayout>

<style>
  .blog-content {
    color: var(--color-primary); /* text-amber-700 */
  }
  .blog-content h2 {
    color: #b45309; /* text-amber-700 */
    font-size: 1.5rem;
    font-weight: 500;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .blog-content p {
    margin: 1rem 0 !important;
  }
  .blog-content ul {
    list-style-type: disc !important;
    padding-left: 2rem !important;
    margin: 1rem 0 !important;
  }
  .blog-content ol {
    list-style-type: decimal !important;
    padding-left: 2rem !important;
    margin: 1rem 0 !important;
  }
  .blog-content li {
    margin: 0.5rem 0 !important;
  }
  .blog-content blockquote {
    border-left: 4px solid #b45309;
    padding-left: 1rem;
    margin: 1rem 0;
    font-style: italic;
  }
  .blog-content a {
    color: #b45309;
    text-decoration: underline;
  }
  .blog-content strong {
    font-weight: 600;
  }
</style>
