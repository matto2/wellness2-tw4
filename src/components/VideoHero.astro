---
interface Props {
  videoSrc: string;
}
const { videoSrc } = Astro.props;
---

<section class="relative w-full h-[140vh] md:h-screen">
  <!-- Video Background -->
  <div class="absolute inset-0 w-full h-full overflow-hidden">
    <div class="absolute inset-0 bg-black/5 z-10"></div>
    <video
      class="absolute min-w-full min-h-full object-cover"
      autoplay
      loop
      muted
      playsinline
      style="filter: hue-rotate(-10deg) saturate(0.8) brightness(1.5); transform: scale(1.2);"
    >
      <source src={videoSrc} type="video/mp4" />
    </video>
  </div>
  <!-- Content -->
  <div
    class="relative z-10 h-full flex flex-col items-center justify-center text-center px-4 -translate-y-8 md:leading-[1.44] md:mt-12"
  >
    <slot />
  </div>
</section>
