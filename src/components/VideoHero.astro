---
interface Props {
  videoSrc: string;
  overlayOpacity?: number; // 0-100, default 20
}
const { videoSrc, overlayOpacity = 40 } = Astro.props;
---

<section class="relative w-full h-screen">
  <!-- Video Background -->
  <div class="absolute inset-0 w-full h-full overflow-hidden">
    <video
      class="absolute min-w-full min-h-full object-cover"
      autoplay
      loop
      muted
      playsinline
      style="filter: saturate(1.3);"
    >
      <source src={videoSrc} type="video/mp4" />
    </video>
  </div>
  <!-- Overlay -->
  <div
    class="absolute inset-0 pointer-events-none"
    style={`background: linear-gradient(to bottom, rgba(0,64,128,${overlayOpacity / 100}) 15%, rgba(0,140,150,0) 90%);`}
  >
  </div>
  <!-- Content -->
  <div
    class="relative z-10 h-full flex flex-col items-center justify-center text-center px-4 -translate-y-8 md:leading-[1.44] md:mt-12"
  >
    <slot />
  </div>
</section>
