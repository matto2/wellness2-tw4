---
interface Props {
  videoSrc: string;
  overlayOpacity?: number;
}
const { videoSrc, overlayOpacity = 30 } = Astro.props;
---

<section class="relative w-full h-screen min-h-[600px] py-12 md:py-24">
  <!-- Video Background only -->
  <div class="absolute inset-0 w-full h-full overflow-hidden">
    <video
      class="absolute min-w-full min-h-full object-cover"
      autoplay
      loop
      muted
      playsinline
      style="filter: saturate(1.15);"
    >
      <source src={videoSrc} type="video/mp4" />
    </video>
  </div>
  <!-- Content -->
  <div
    class="relative z-10 h-full flex flex-col items-center justify-center text-center px-4"
  >
    <slot />
  </div>
</section>
