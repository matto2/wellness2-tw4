---
interface Props {
  title: string;
  brand: string;
  quantity: string;
  price: number;
  salePrice: number;
  image: string;
}

const { title, brand, quantity, price, salePrice, image } = Astro.props;
---

<div
  class="bg-[var(--color-card-bg)] rounded-3xl w-full sm:max-w-xs flex flex-col transition-shadow duration-300"
  style="box-shadow: 0 6px 24px -4px rgba(0,0,0,0.18), 0 -4px 16px -4px rgba(0,0,0,0.10);"
>
  <!-- Product Image -->
  <div class="bg-white pt-4 rounded-t-3xl">
    <img src={image} alt={title} class="h-[120px] w-auto mx-auto" />
  </div>

  <!-- Product Info (flex-grow container) -->
  <div class="flex flex-col p-4 flex-1">
    <!-- Title -->
    <h3 class="text-lg font-semibold text-gray-900 mb-3 min-h-[3.5rem]">
      {title}
    </h3>

    <!-- Brand and Quantity -->
    <div class="flex justify-between items-center mb-3 text-sm text-gray-700">
      <span class="font-medium">{brand}</span>
      <span class="text-gray-600">{quantity}</span>
    </div>

    <!-- Price -->
    <div class="flex items-center gap-2 mb-4">
      <span class="text-sm text-gray-500 line-through">
        ${price.toFixed(2)}
      </span>
      <span class="text-lg font-bold text-[var(--color-primary)]">
        ${salePrice.toFixed(2)}
      </span>
    </div>

    <!-- Button pushed to bottom -->
    <div class="mt-auto">
      <button
        class="w-full bg-[var(--color-primary)] text-white py-2 px-4 rounded-full hover:bg-[var(--color-primary-dark)] transition-colors duration-300"
      >
        Buy in Our Shop
      </button>
    </div>
  </div>
</div>
