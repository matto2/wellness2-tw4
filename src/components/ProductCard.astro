---
import { Image } from "astro:assets";

interface Props {
  title: string;
  brand: string;
  quantity: string;
  price: number;
  salePrice: number;
  image: any; // Astro image import
  shopUrl?: string;
  description?: string;
  category?: string;
}

const { title, brand, quantity, price, salePrice, image, shopUrl, description, category } = Astro.props;
---

{shopUrl ? (
  <a
    href={shopUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="block w-full"
  >
    <div
      class="w-full flex flex-col rounded-xl overflow-hidden bg-white product-card relative h-full"
    >
      <!-- Product Image -->
      <div class="w-full flex items-center justify-center bg-white p-6 h-48">
        <Image
          src={image}
          alt={title}
          class="object-contain h-full w-auto max-w-full"
          width={200}
          height={200}
        />
      </div>
      <!-- Product Info -->
      <div class="flex flex-col p-4 flex-1">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">
          {title}
        </h3>
        {description && (
          <p class="text-sm text-gray-700 mb-3 leading-relaxed">
            {description}
          </p>
        )}
        <div class="flex justify-between items-center mb-3 text-sm text-gray-700">
          <span class="font-medium">{brand}</span>
          <span class="text-gray-600">{quantity}</span>
        </div>
        <div class="flex items-center gap-2 mb-4">
          {price !== salePrice && (
            <span class="text-sm text-gray-500 line-through">
              ${price.toFixed(2)}
            </span>
          )}
          <span class="text-sm font-semibold text-[var(--color-primary)]">
            ${salePrice.toFixed(2)}
          </span>
        </div>
        <div class="mt-auto">
          <div
            class="w-full bg-[var(--color-primary)] text-white py-2 px-4 rounded-full hover:bg-[var(--color-primary-dark)] transition-colors duration-300 text-center font-medium text-sm"
          >
            View in Shop
          </div>
        </div>
      </div>
    </div>
  </a>
) : (
  <div
    class="w-full flex flex-col rounded-xl overflow-hidden bg-white product-card relative h-full"
  >
    <!-- Product Image -->
    <div class="w-full flex items-center justify-center bg-white p-6 h-48">
      <Image
        src={image}
        alt={title}
        class="object-contain h-full w-auto max-w-full"
        width={200}
        height={200}
      />
    </div>
    <!-- Product Info -->
    <div class="flex flex-col p-4 flex-1">
      <h3 class="text-lg font-semibold text-gray-900 mb-2">
        {title}
      </h3>
      {description && (
        <p class="text-sm text-gray-700 mb-3 leading-relaxed">
          {description}
        </p>
      )}
      <div class="flex justify-between items-center mb-3 text-sm text-gray-700">
        <span class="font-medium">{brand}</span>
        <span class="text-gray-600">{quantity}</span>
      </div>
      <div class="flex items-center gap-2 mb-4">
        {price !== salePrice && (
          <span class="text-sm text-gray-500 line-through">
            ${price.toFixed(2)}
          </span>
        )}
        <span class="text-sm font-semibold text-[var(--color-primary)]">
          ${salePrice.toFixed(2)}
        </span>
      </div>
      <div class="mt-auto">
        <button
          class="w-full bg-[var(--color-primary)] text-white py-2 px-4 rounded-full hover:bg-[var(--color-primary-dark)] transition-colors duration-300 font-medium text-center text-sm"
        >
          Buy in Our Shop
        </button>
      </div>
    </div>
  </div>
)}
