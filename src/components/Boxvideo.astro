---
// src/components/BoxVideo.astro
export interface Props {
  title?: string;
  subtitle?: string;
  overlayOpacity?: string;
  height?: string;
}

const {
  title = "Your Amazing Blog Post Title",
  subtitle = "A compelling subtitle or description of your blog post content",
  overlayOpacity = "bg-opacity-40",
  height = "h-screen",
} = Astro.props;
---

<!-- Hero Video Component -->
<section class={`relative w-full ${height} overflow-hidden`}>
  <!-- Video Background -->
  <video
    class="absolute top-0 left-0 w-full h-full object-cover"
    autoplay
    muted
    loop
    playsinline
  >
    <source src="/box.mp4" type="video/mp4" />
    Your browser does not support the video tag.
  </video>

  <!-- Dark overlay for better text readability -->
  <div class={`absolute inset-0 bg-black ${overlayOpacity}`}></div>

  <!-- Hero Content -->
  <div class="relative z-10 flex items-center justify-center h-full px-4">
    <div class="text-center text-white max-w-4xl">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
        {title}
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-gray-200">
        {subtitle}
      </p>
      <slot />
    </div>
  </div>

  <!-- Scroll indicator -->
  <div
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white animate-bounce"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
