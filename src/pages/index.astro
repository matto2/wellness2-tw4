---
import Layout from "../layouts/Layout.astro";
import LotusIcon from "../components/LotusIcon.astro";
import AcuIcon from "../components/AcuIcon.astro";
import HerbsIcon from "../components/HerbsIcon.astro";
import WellnessIcon from "../components/WellnessIcon.astro";
import ImageSlideshow from "../components/ImageSlideshow.astro";
import VideoHero from "../components/VideoHero.astro";
import BookingModal from "../components/BookingModal.astro";
import TestimonialCarousel from "../components/TestimonialCarousel.astro";
import { Image } from "astro:assets";
import welcomeImage from "../assets/3779245098.jpg";
import maria1Image from "../assets/maria1.jpg";
import mariaImage from "../assets/maria.jpg";
import samayaImage from "../assets/samaya.jpg";
import moxaStaticImage from "../assets/moxa-static.jpg";
import medicalLogo from "../assets/medical-logo.jpg";

// Import all slideshow images
import clinic1 from "../assets/clinic/3780071716.jpg";
import clinic2 from "../assets/clinic/3779151766.jpg";
import clinic3 from "../assets/clinic/3779151751.jpg";
// import clinic4 from "../assets/clinic/3779151669.jpg";
import clinic5 from "../assets/clinic/3779151852.jpg";
// import clinic6 from "../assets/clinic/3779151811.jpg";
import clinic7 from "../assets/clinic/3779151781.jpg";
import clinic8 from "../assets/clinic/3779151591.jpg";
import clinic9 from "../assets/clinic/3779942412.jpg";
import clinic10 from "../assets/clinic/3779011254.jpg";
import clinic11 from "../assets/clinic/3779977271.jpg";
import backofficeImage from "../assets/clinic/backoffice.jpg";

// Remove the original slideshowImages array and keep only the reorderedSlideshowImages array, renaming it to slideshowImages
const slideshowImages = [
  { src: clinic1, alt: "Wellness Medical Center interior" },
  // { src: clinic4, alt: "Wellness Medical Center herbs" },
  { src: clinic7, alt: "Wellness Medical Center lobby" },
  { src: clinic2, alt: "Wellness Medical Center treatment room" },
  { src: clinic9, alt: "Wellness Medical Center herbs display" },
  { src: clinic3, alt: "Wellness Medical Center waiting area" },
  { src: clinic10, alt: "Wellness Medical Center herbs collection" },
  { src: clinic11, alt: "Wellness Medical Center additional view" },
  { src: clinic8, alt: "Wellness Medical Center entrance" },
  // { src: clinic6, alt: "Wellness Medical Center consultation room" },
  { src: backofficeImage, alt: "Wellness Medical Center back office" }, // new image at end
];
// Supports weights 100-900
import "@fontsource-variable/montserrat";
import Motion from "../components/Motion.astro";
---

<Layout title="Home | Wellness Medical Center">
  <!-- VIDEO HERO SECTION -->
  <VideoHero videoSrc="/waves3.mp4" overlayOpacity={50}>
    <div class="max-w-5xl">
      <div class="flex justify-center mb-2 sm:mb-4 mt-4 sm:mt-6">
        <LotusIcon
          class="w-16 h-16 sm:w-20 sm:h-20 md:w-24 md:h-24 text-white"
        />
      </div>
      <h1
        class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl text-amber-50 text-shadow-md font-medium mb-3 sm:mb-4 md:mb-12 px-4 sm:px-0"
      >
        Welcome to The Wellness Medical Center
      </h1>
      <p
        class="text-base sm:text-lg lg:text-xl text-amber-50 text-shadow-md mb-4 sm:mb-6 md:mb-12 md:leading-[1.8] max-w-4xl px-4 sm:px-0"
      >
        Our mission is to improve the health of our patients and our community.
        Wellness Medical Center's pharmacy offers quality controlled herbs,
        supplements and nutraceuticals. We provide quality healthcare through a
        team of compassionate, dedicated, skilled practitioners. We approach
        each patient with personalized care centered in education, advocacy,
        respect and value. We are passionate about working with people on their
        healing journey.
      </p>
      <div
        class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center px-4 sm:px-0"
      >
        <a
          href="#practitioners"
          class="flex items-center justify-center text-amber-50 gap-2 px-4 sm:px-6 py-2.5 sm:py-3 rounded-full bg-[var(--color-primary)] hover:bg-[var(--color-primary-dark)] transition-colors text-sm font-medium"
          aria-label="Meet Our Practitioners"
        >
          <span class="text-sm font-medium">Meet Our Practitioners</span>
        </a>
        <a
          href="/shop"
          class="px-4 sm:px-6 py-2.5 sm:py-3 rounded-full bg-[var(--color-primary)] hover:bg-[var(--color-primary-dark)] text-amber-50 text-sm font-medium flex items-center justify-center gap-2 transition-colors"
          aria-label="Visit the Shop"
        >
          Visit the Shop
        </a>
      </div>
    </div>
  </VideoHero>

  <!-- LEGACY SECTION -->
  <section class="py-8 sm:py-12 md:py-16">
    <div class="max-w-screen-xl mx-auto px-4 2xl:px-0">
      <div class="md:flex md:items-center md:gap-12 md:flex-row-reverse">
        <div class="md:w-[40%] mb-6 sm:mb-8 md:mb-0 flex justify-end">
          <div class="w-full">
            <ImageSlideshow
              images={[
                {
                  src: maria1Image,
                  alt: "Maria providing acupuncture treatment",
                },
                ...slideshowImages,
              ]}
            />
          </div>
        </div>
        <div class="md:w-[60%]">
          <h2
            class="text-xl sm:text-2xl md:text-3xl font-medium mb-4 sm:mb-6 text-[var(--color-primary)]"
          >
            A Legacy of Healing
          </h2>
          <p
            class="text-base sm:text-lg text-gray-700 mb-4 sm:mb-6 leading-relaxed"
          >
            The Wellness Medical Center has been a cornerstone in the Santa Cruz
            acupuncture healthcare community, founded by Dr. Donna Leight, LAc,
            OMD and Dr. Holly Guzman, LAc, OMD, dedicated providers,
            consistently treating patients in Santa Cruz since 1983.
          </p>
          <p
            class="text-base sm:text-lg text-gray-700 mb-4 sm:mb-6 leading-relaxed"
          >
            Dr. Guzman is a beloved and dedicated educator, teaching apprentices
            in our community and speaking at conferences around the country,
            ushering in the future generation of traditional Asian medical
            providers. Dr. Holly Guzman continues to share her wealth of
            knowledge, offering advanced acupuncture trainings and CEUs at
            <a
              href="https://hollyguzmanseminars.com"
              target="_blank"
              rel="noopener noreferrer"
              class="text-[var(--color-primary)] hover:text-[var(--color-primary-dark)]"
              >hollyguzmanseminars.com</a
            >.
          </p>
          <p
            class="text-base sm:text-lg text-gray-700 mb-4 sm:mb-6 leading-relaxed"
          >
            Dr. Leight passing in 2018, left behind a legacy of healing. Dr.
            Leight dedicated herself to the health and wellbeing of her
            patients, community and family. She will be remembered as a
            compassionate healer and pioneer in the field of traditional Chinese
            medicine. Her heartfelt presence left a lasting impact on the Santa
            Cruz community. She passed on her lineage of healing to her
            daughter, Dr. Maria Mitchell, LAc, DTCM who continues to see
            patients and serve the community at the Wellness Medical Center.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ABOUT US SECTION -->
  <section class="max-w-screen-xl mx-auto px-4 2xl:px-0 py-4 sm:py-8 md:py-12">
    <h2
      class="text-xl sm:text-2xl md:text-3xl text-center text-[var(--color-primary)] font-medium mb-6 sm:mb-8"
      id="practitioners"
    >
      Meet Our Practitioners
    </h2>
    <div class="align-items-center mb-8 sm:mb-12 md:mb-16 max-w-4xl mx-auto">
      <Image
        src={welcomeImage}
        alt="Maria and Samaya at Wellness Medical Center"
        class="w-full rounded-[16px] sm:rounded-[24px] shadow-lg"
        width={1000}
        height={800}
        quality={80}
      />
    </div>
    <div class="space-y-8 sm:space-y-12">
      <!-- Maria Mitchell Bio -->
      <div
        class="flex flex-col md:flex-row items-center md:items-start gap-4 sm:gap-6 max-w-4xl mx-auto"
      >
        <!-- Avatar -->
        <a
          href="https://www.mariamitchelllac.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="block transition-transform duration-300 hover:scale-105"
        >
          <Image
            src={mariaImage}
            alt="Maria Mitchell"
            class="rounded-full object-cover mb-4 md:mb-0 md:mr-16 w-[150px] h-[150px] sm:w-[180px] sm:h-[180px] md:w-[200px] md:h-[200px] aspect-square"
            width={200}
            height={200}
            quality={80}
          />
        </a>

        <!-- Bio Text -->
        <div class="text-left w-full">
          <h3
            class="text-lg sm:text-xl font-semibold text-gray-900 mb-2 sm:mt-2"
          >
            Maria Mitchell, DTCM, L.Ac.
          </h3>
          <p class="text-sm sm:text-base text-gray-700 leading-relaxed">
            Maria Mitchell specializes in Women's Gynecological Health. She
            completed a seven-year clinical internship in advanced acupuncture
            with renowned practitioner and speaker Holly Guzman, L.Ac., O.M.D.,
            a specialist in Women's Health and Infertility. She also studied for
            17 years with Kiiko Matsumoto, a Japanese acupuncturist known for
            her innovation, precision, and dramatically effective use of
            acupuncture.
          </p>
          <p
            class="mt-3 sm:mt-4 text-sm sm:text-base text-gray-700 leading-relaxed"
          >
            Maria has a comprehensive background in Integrative Sports Medicine
            and Trauma. She received a B.S. in Kinesiology and Exercise
            Physiology from San Jose State University and served as a
            Firefighter for seven years, trained in emergency protocols. She
            worked for five years in a physical therapy setting and later
            received certification in Integrative Sports Medicine with Frank He,
            L.Ac. She specializes in the treatment of athletic injuries,
            musculoskeletal conditions, and pain-related issues.
          </p>
          <p
            class="mt-3 sm:mt-4 text-sm sm:text-base text-gray-700 leading-relaxed"
          >
            She recently completed her Doctorate (DTCM) at Five Branches
            University.
          </p>
          <p
            class="mt-3 sm:mt-4 text-sm sm:text-base text-gray-700 leading-relaxed"
          >
            Maria is also on faculty at Five Branches University, where she
            teaches TCM theory, Japanese KMS (Kiiko Matsumoto Style
            Acupuncture), and serves as a clinical supervisor in various
            teaching settings. She also maintains a private practice in Santa
            Cruz.
          </p>
          <div class="flex items-center gap-3 mt-3 sm:mt-4">
            <div class="w-12 h-12 rounded-full overflow-hidden flex-shrink-0">
              <Image
                src={medicalLogo}
                alt="Medical logo"
                class="w-full h-full object-cover"
                width={48}
                height={48}
                quality={80}
              />
            </div>
            <p class="text-sm sm:text-base text-gray-700 leading-relaxed">
              Maria is part of the Central California Alliance for Health
              Insurance provider network and is currently accepting new
              patients.
            </p>
          </div>
          <p
            class="mt-3 sm:mt-4 text-sm sm:text-base text-gray-700 leading-relaxed"
          >
            <a
              href="https://mariamitchelllac.com/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-[var(--color-primary)] hover:text-[var(--color-primary-dark)] font-semibold"
            >
              Visit Maria's personal site
            </a> |
            <a
              href="https://wmc.janeapp.com/#/staff_member/2"
              target="_blank"
              rel="noopener noreferrer"
              class="text-[var(--color-primary)] hover:text-[var(--color-primary-dark)] font-semibold"
              >Book an appointment</a
            >
          </p>
        </div>
      </div>

      <!-- Horizontal Rule -->
      <hr class="border-gray-300 max-w-4xl mx-auto" />

      <!-- Samaya Cullerton Bio -->
      <div
        class="flex flex-col md:flex-row items-center md:items-start gap-4 sm:gap-6 max-w-4xl mx-auto"
      >
        <!-- Avatar -->
        <a
          href="https://samayacullerton.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="block transition-transform duration-300 hover:scale-105"
        >
          <Image
            src={samayaImage}
            alt="Samaya Cullerton"
            class="rounded-full object-cover mb-4 md:mb-0 md:mr-16 w-[150px] h-[150px] sm:w-[180px] sm:h-[180px] md:w-[200px] md:h-[200px] aspect-square"
            width={200}
            height={200}
            quality={80}
          />
        </a>

        <!-- Bio Text -->
        <div class="text-left w-full">
          <h3
            class="text-lg sm:text-xl font-semibold text-gray-900 mb-2 sm:mt-2"
          >
            Samaya Cullerton, L.Ac.
          </h3>
          <p class="text-sm sm:text-base text-gray-700 leading-relaxed">
            Samaya is a California board-licensed acupuncturist and herbalist
            dedicated to providing compassionate, patient-centered care through
            traditional Chinese medicine. She offers acupuncture, herbal
            treatments, and holistic nutritional support, with a focus on
            personalized, evidence-based care.
          </p>
          <p
            class="mt-3 sm:mt-4 text-sm sm:text-base text-gray-700 leading-relaxed"
          >
            She holds a Master's Degree in Traditional Chinese Medicine and has
            over a decade of experience, specializing in women's health, as well
            as prenatal, postpartum, and pediatric traditional medicine. In
            addition to her clinical work, Samaya is a professor of herbal
            medicine, dietetics, and clinical acupuncture in the doctoral
            program at Five Branches University in Santa Cruz.
          </p>
          <div class="flex items-center gap-3 mt-3 sm:mt-4">
            <div class="w-12 h-12 rounded-full overflow-hidden flex-shrink-0">
              <Image
                src={medicalLogo}
                alt="Medical logo"
                class="w-full h-full object-cover"
                width={48}
                height={48}
                quality={80}
              />
            </div>
            <p class="text-sm sm:text-base text-gray-700 leading-relaxed">
              Samaya is part of the Central California Alliance for Health
              Insurance provider network and is currently accepting new
              patients.
            </p>
          </div>
          <p
            class="mt-3 sm:mt-4 text-sm sm:text-base text-gray-700 leading-relaxed"
          >
            <a
              href="https://samayacullerton.com/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-[var(--color-primary)] hover:text-[var(--color-primary-dark)] font-semibold"
            >
              Visit Samaya's personal site
            </a> |
            <a
              href="https://wmc.janeapp.com/#/staff_member/1"
              target="_blank"
              rel="noopener noreferrer"
              class="text-[var(--color-primary)] hover:text-[var(--color-primary-dark)] font-semibold"
              >Book an appointment</a
            >
          </p>
        </div>
      </div>
    </div>
  </section>
  <div class="px-4 xl:px-0">
    <hr class="border-gray-300 max-w-4xl mx-auto" />
  </div>

  <!-- WELCOME SECTION -->
  <!-- <section class="py-16 md:py-24 w-full">
    <div class="max-w-screen-xl mx-auto px-4 xl:px-0">
      <div class="md:flex md:items-center md:gap-12">
        <div class="md:w-1/2 mb-8 md:mb-0">
          <Image
            src={welcomeImage}
            alt="Maria and Samaya at Wellness Medical Center"
            class="w-full rounded-[24px] shadow-lg"
            width={1000}
            height={800}
            quality={80}
          />
        </div>
        <div class="md:w-1/2">
          <h1
            class="text-2xl md:text-3xl text-[var(--color-primary)] font-medium mb-6"
          >
            Meet Our Practitioners
          </h1>
          <p class="text-lg md:text-xl mb-6 text-gray-900">
            Santa Cruz's trusted home for holistic, health-centered care. We
            offer personalized acupuncture, herbal medicine, and lifestyle
            guidance rooted in the wisdom of Traditional Chinese Medicine. Our
            mission is to support your body's natural healing and help you find
            balance, whether you're navigating fertility, recovery, or everyday
            wellness.
          </p>
        </div>
      </div>
    </div>
  </section> -->

  <!-- TESTIMONIALS SECTION -->
  <section class="px-4 2xl:px-0 mb-8 sm:mb-12 md:mb-16">
    <Motion>
      <div class="flex justify-center mb-2 mt-6 sm:mt-8">
        <LotusIcon class="w-16 h-16 sm:w-20 sm:h-20 md:w-24 md:h-24" />
      </div>
    </Motion>
    <Motion>
      <h2
        class="text-2xl sm:text-3xl text-[var(--color-primary)] font-medium mb-6 sm:mb-8 text-center"
      >
        What People are Saying
      </h2>
    </Motion>
    <Motion>
      <TestimonialCarousel
        testimonials={[
          {
            text: "Maria is a gifted healer with deep knowledge of physiology. She's precise, takes her time, and always helps my back feel better. Thanks to her, I can keep playing beach volleyball—even after injuries.",
            author: "Shasta T.",
          },
          {
            text: "Maria has almost cured my back and neck issues. She's thorough, affordable, and creates a relaxing atmosphere. I LOVE her and highly recommend her—5++++ stars!",
            author: "Sean Tucker",
          },
          {
            text: "Samaya is an incredible healer who guided me through recovery from multiple injuries. Her holistic care, including nutrition and herbs, supports my long-term health.",
            author: "Sara R.",
          },
          {
            text: "Samaya is truly phenomenal. She's supported me through fertility, pregnancy, recovery, and motherhood with gentle care, herbal remedies, and laughter. She's a gift!",
            author: "E.S.",
          },
        ]}
      />
    </Motion>
  </section>
  <div class="px-4 xl:px-0">
    <hr class="border-gray-300 max-w-4xl mx-auto" />
  </div>
  <!-- THREE CARDS SECTION -->
  <section
    class="max-w-screen-xl mx-auto px-4 2xl:px-0 mt-6 sm:mt-8 mb-12 sm:mb-16"
  >
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-6 md:gap-8">
      <!-- Card 1 -->
      <Motion>
        <a
          href="https://wmc.janeapp.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="block w-full rounded-[16px] sm:rounded-[24px] shadow-md p-4 sm:p-6 md:p-8 flex flex-col items-center justify-center text-center bg-[var(--color-card-bg)] hover:shadow-lg transition-all duration-300 hover:scale-[1.02] cursor-pointer"
          aria-label="Book an appointment with Wellness Medical Center"
        >
          <div class="flex justify-center items-center rounded-xl mb-4 sm:mb-6">
            <AcuIcon
              class="w-12 h-12 sm:w-16 sm:h-16 md:w-20 md:h-20 text-[var(--color-primary)]"
            />
          </div>
          <h3 class="text-lg sm:text-xl font-semibold mb-2 text-center">
            Book an Appointment
          </h3>
        </a>
      </Motion>
      <!-- Card 2 -->
      <Motion>
        <a
          href="/shop"
          class="block rounded-[16px] sm:rounded-[24px] shadow-md p-4 sm:p-6 md:p-8 flex flex-col text-center bg-[var(--color-card-bg)] hover:shadow-lg transition-all duration-300 hover:scale-[1.02] cursor-pointer"
          aria-label="Visit the Shop"
        >
          <div class="flex justify-center rounded-xl mb-4 sm:mb-6">
            <HerbsIcon
              class="w-12 h-12 sm:w-16 sm:h-16 md:w-20 md:h-20 text-[var(--color-primary)]"
            />
          </div>
          <h3 class="text-lg sm:text-xl font-semibold mb-2">
            Shop Our Products
          </h3>
        </a>
      </Motion>
      <!-- Card 3 -->
      <Motion>
        <a
          href="/blog"
          class="block rounded-[16px] sm:rounded-[24px] shadow-md p-4 sm:p-6 md:p-8 flex flex-col text-center bg-[var(--color-card-bg)] hover:shadow-lg transition-all duration-300 hover:scale-[1.02] cursor-pointer"
          aria-label="Visit Health Education Blog"
        >
          <div class="flex justify-center rounded-xl mb-4 sm:mb-6">
            <WellnessIcon
              class="w-12 h-12 sm:w-16 sm:h-16 md:w-20 md:h-20 text-[var(--color-primary)]"
            />
          </div>
          <h3 class="text-lg sm:text-xl font-semibold mb-2">Learn</h3>
        </a>
      </Motion>
    </div>
  </section>

  <!-- FEATURED HEALTH ARTICLE SECTION -->
  <section class="max-w-screen-xl mx-auto px-4 2xl:px-0 py-8 sm:py-12 md:py-16">
    <div class="text-center mb-8 sm:mb-12">
      <h2
        class="text-2xl sm:text-3xl md:text-4xl text-[var(--color-primary)] font-medium mb-4"
      >
        Featured Health Article
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Discover insights from our practitioners on traditional Chinese medicine
        and holistic wellness
      </p>
    </div>

    <div class="max-w-4xl mx-auto">
      <article
        class="bg-white rounded-[16px] sm:rounded-[24px] shadow-lg overflow-hidden"
      >
        <div class="md:flex">
          <div class="md:w-1/3">
            <Image
              src={moxaStaticImage}
              alt="Moxa treatment"
              class="w-full h-48 md:h-full object-cover"
              width={400}
              height={300}
              quality={80}
            />
          </div>
          <div class="md:w-2/3 p-6 sm:p-8">
            <div class="flex items-center gap-4 mb-4">
              <span class="text-sm text-gray-500">March 20, 2024</span>
              <span class="text-sm text-gray-500">•</span>
              <span class="text-sm text-gray-500">5 min read</span>
            </div>
            <h3 class="text-xl sm:text-2xl font-semibold text-gray-900 mb-3">
              Moxa Boxes: Traditional Chinese Medicine for Digestive Health
            </h3>
            <p class="text-gray-700 leading-relaxed mb-6">
              Learn about the traditional Chinese medicine practice of
              moxibustion and how moxa boxes are used in treatment to support
              digestive function and overall wellness.
            </p>
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <div
                  class="w-10 h-10 bg-[var(--color-primary)] rounded-full flex items-center justify-center"
                >
                  <span class="text-white font-semibold text-sm">MM</span>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">
                    Maria Mitchell, DTCM, L.Ac.
                  </p>
                  <p class="text-xs text-gray-500">Acupuncturist & Herbalist</p>
                </div>
              </div>
              <a
                href="/blog/acupuncture-digestive-function"
                class="inline-flex items-center gap-2 px-4 py-2 bg-[var(--color-primary)] text-white rounded-full hover:bg-[var(--color-primary-dark)] transition-colors text-sm font-medium"
              >
                Read Article
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </article>

      <div class="text-center mt-8">
        <a
          href="/blog"
          class="inline-flex items-center gap-2 text-[var(--color-primary)] hover:text-[var(--color-primary-dark)] font-medium transition-colors"
        >
          See all articles
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .instructions {
    margin-bottom: 2rem;
    background: #4f4f4f;
    border-radius: 4px;
    padding: 1.5rem;
  }
  .code {
    color: #8a9cf8;
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
